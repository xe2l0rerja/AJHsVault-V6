---
import '../styles/global.css';
import Taskbar from '../components/Taskbar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A dark, skeuomorphic website optimized for Chromebooks">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-b from-gray-900 to-black text-gray-200 flex flex-col min-h-screen">
		<main class="flex-grow overflow-auto p-4">
			<slot />
		</main>
		<Taskbar />
	</body>
</html>

